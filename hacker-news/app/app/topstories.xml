            <StackLayout>
                <Label text="{{ title }}" />
                <StackLayout orientation="horizontal">
                    <Label text="{{'By ' + by + ' - ' + score + ' points'}}" />
                </StackLayout>
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>